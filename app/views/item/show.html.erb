<% if ! flash[:notice].blank? %>
<div class="notice">
<%= flash[:notice] %>
</div>
<% end %>

<h2><th>Name:</th>
<%= @item.name %></h2>

<h2><th>Price:</th>
&euro;<%= @item.price %>	
</h2>

<p>
<%= link_to image_tag("Edit.png", :size=>"15x15")+ "Edit item", item_edit_path(@item) %>
</p>
<p><%= link_to image_tag("Delete.jpe", :size=>"15x15") +"Delete item", item_delete_path(@item), method: :delete, data: { confirm: "Are you sure you want to delete this item?" } %></p> 
<p>
<b><%= link_to image_tag("Back.jpe", :size=>"15x15")+"Back to full of all items",root_path %><b>
</p>
