<body>
<h2>Edit item</h2>

<%= form_for :item, :method => 'put' do |f| %> 
    <p> 
    <%= f.label :name %><br> 
    <%= f.text_field :name %> 
    </p> 
  
    <p> 
    <%= f.label :price %><br> 
    <%= f.number_field :price %> 
    </p> 
  
    <p> 
    <%= f.submit %> 
    </p> 
<% end %> 
</body>
</html>