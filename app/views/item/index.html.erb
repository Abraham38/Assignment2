<div class="items index">
<h2>List of items</h2>

<table class="listing" summary="Item list">
<tr class="header">

<th>Item</th>
<th>Action</th>
</tr>

<p>
<% @items.each do |item| %>
<tr>
<td><%= item.name  %></br></td>
<td>
<%= link_to"show",item_show_path(item) %>
</td>
</tr>
<% end %>	
</p>


<b><%= link_to "Create new item", item_new_path %></b>

</table>
</div>